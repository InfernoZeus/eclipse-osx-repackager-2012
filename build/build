#! /bin/bash

cocoa_dialog=/Applications/CocoaDialog.app

build_dir="$(cd $(dirname "$0"); pwd)"
src_dir="$(dirname "$build_dir")"
dist_dir="$src_dir/dist"
temp_dir="$src_dir/temp"

function die() {
  echo "$*"
  exit 1
}

skip_local_changes_check=${SKIPLC-false}
while test "${1:0:1}" = "-"; do
  case $1 in
    -l)
      skip_local_changes_check=true
      shift;;
    -z)
      skip_zip=1
      shift;;
  esac
done

{
	read ver commitid
} < <(head -1 ChangeLog | perl -ne "/^Version\\s*([\d\w]+)\\s*\(commit id ([\d\w-]+)\)$/ && print \"\$1 \$2\"")

echo "Top ChangeLog line interpreted as: version $ver, commit id $commitid"

$skip_local_changes_check || {
	head="$(git-rev-parse HEAD)" || die "cannot get a HEAD commit id"
	test "$head" == "$commitid" || die "wrong commit id (please fix ChangeLog to mention $head)"
}

test -d "$dist_dir" || mkdir -p "$dist_dir"

test -z "$ver" && die "Error determining EclipseOSXRepackager version. Aborted."

if test -z "$skip_zip"; then
  zipfile="$dist_dir/EclipseOSXRepackager-v$ver.zip"
  zip "$zipfile" "$src_dir/EclipseOSXRepackager"
  echo "Created $zipfile."
fi

test -z "$(which platypus)" && die "ERROR: Please install Platypus command-line tool (see http://sveinbjorn.org/platypus)"
test -d "$cocoa_dialog" || die "CocoaDialog not found in $cocoa_dialog, please install or change the path inside this script"

dmgdir="$temp_dir/Eclipse OS X Repackager v$ver"
test -d "$dmgdir" && rm -r "$dmgdir"
mkdir -p "$dmgdir"
ln -s /Applications "$dmgdir/Applications"

app="$dmgdir/Eclipse OS X Repackager.app"
test -d "$app" && rm -r "$app"

platypus -FD -a "Eclipse OS X Repackager" -o None -p /bin/bash -V "$ver" -f "$src_dir/EclipseOSXRepackager" -f "$cocoa_dialog" -I org.andreyvit.EclipseOSXRepackager -c "$src_dir/EclipseOSXRepackagerUI" "$app" ||
	die "fatal: platypus failed."

if test -z "$skip_zip"; then
  dmgfile="$dist_dir/EclipseOSXRepackager-v$ver.dmg"
  test -f "$dmgfile" && rm "$dmgfile"
  "$src_dir/../create-dmg/create-dmg" --window-size 500 310 --background "$build_dir/background.gif" --icon-size 96 --volname "EclipseOSXRepackager-v$ver" --icon "Applications" 380 205 --icon "Eclipse OS X Repackager" 110 205 "$dmgfile" "$dmgdir"
  # hdiutil create -srcfolder "$dmgdir" "$dmgfile"
  echo "Created $dmgfile." 
fi
